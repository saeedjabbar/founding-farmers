{
  "kind": "collectionType",
  "collectionName": "stories",
  "info": {
    "singularName": "story",
    "pluralName": "stories",
    "displayName": "Story",
    "description": "Editorial story with timeline milestones and source records"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "blurb": {
      "type": "text",
      "required": true
    },
    "authorName": {
      "type": "string",
      "pluginOptions": {
        "content-manager": {
          "visible": false
        },
        "content-type-builder": {
          "visible": false
        }
      }
    },
    "location": {
      "type": "enumeration",
      "enum": [
        "Marlborough",
        "Hudson Valley",
        "Berkshires",
        "Crescent City"
      ],
      "default": "Marlborough",
      "required": true
    },
    "publishedDate": {
      "type": "date"
    },
    "heroMedia": {
      "type": "media",
      "allowedTypes": [
        "images"
      ],
      "multiple": false
    },
    "timelineEntries": {
      "type": "component",
      "repeatable": true,
      "component": "timeline.timeline-entry",
      "required": true,
      "min": 1
    },
    "summaryEnabled": {
      "type": "boolean",
      "default": false
    },
    "summaryCard": {
      "type": "component",
      "component": "story.summary-card",
      "repeatable": false
    }
  }
}
